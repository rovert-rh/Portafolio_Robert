---
const personalImageAlt = "Miguel Ángel"
import Badge from "@/components/Badge.astro"
import LinkedInIcon from "@/components/icons/LinkedIn.astro"
import MailIcon from "@/components/icons/Mail.astro"
import SocialPill from "@/components/SocialPill.astro"
import CVIcon from "@/components/icons/CV.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full w-auto shadow-lg size-32"
      src="/RobertoR.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://www.linkedin.com/in/roberto-reyes-ib/"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    ¡Hola, Soy Roberto Reyes!
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-teal-400 [&>strong]:text-sky-600 [&>strong]:font-semibold dark:text-gray-300"
  >
    +8 años de experiencia. <strong
      >Desarrollador Full-Stack || Especialista en Infraestructura Cloud</strong
    > Puebla, México. Especializado en el desarrollo de aplicaciones web y implementaciones de Infraestructura Cloud.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:robertoireyes.m@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://www.linkedin.com/in/roberto-reyes-ib/">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
    <SocialPill href="https://drive.google.com/file/d/1Knf6hgUpUqDD4cY4hYUJQGOiS7iUZC1z/view?usp=sharing">
      <CVIcon class="size-4" />
      CV
    </SocialPill>
  </nav>
</div>
